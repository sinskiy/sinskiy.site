---
import Projects from "./Projects.astro";
import Contacts from "./Contacts.astro";
import Thoughts from "./Thoughts.astro";
import OutwardArrow from "./icons/outward-arrow.svg";
---

<main>
  <hgroup style="--order: 1;">
    <h1>dima sinskiy</h1>
    <h2>full-stack web developer interested in politics, philosophy and reading books<br />i'm looking for friends and job, <a href="#contacts">dm me on Discord</a></h2>
    <nav>
      <a href="https://sinskiy.github.io/resume" target="_blank"
        >resume <OutwardArrow /></a
      >
      <a href="https://madwriters.sinskiy.site" target="_blank"
        >shared blog with my friend <OutwardArrow /></a
      >
    </nav>
  </hgroup>
  <section style="--order: 3;">
    <h2>projects</h2>
    <Projects />
  </section>
  <section id="contacts">
    <h2>contacts</h2>
    <Contacts />
  </section>
  <section>
    <h2>thoughts?</h2>
    <a href="/post-thought">add a thought</a>
    <Thoughts />
  </section>
</main>

<style>
  main {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  h2 {
    color: rgb(var(--foreground-variant) / 0.8);
    font-size: 1rem;
    font-weight: 500;
  }

  hgroup > nav {
    margin-top: 0.5rem;
    display: flex;
    gap: 1rem;
  }

  a[target="_blank"] {
    display: flex;
    gap: 0.25rem;
  }

  section[style],
  hgroup[style] {
    opacity: 0;
    animation: none;
  }
  @media (prefers-reduced-motion: no-preference) {
    section[style],
    hgroup[style] {
      animation: 500ms show forwards;
      animation-delay: calc(var(--order) * 200ms);
    }
  }

  @keyframes show {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
