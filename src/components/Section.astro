---
interface Props {
    title: string
    style?: string
}

const { title, style } = Astro.props
---

<section id={title} style={style}>
    <h3>{title}</h3>
    <slot />
</section>

<style>
    section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    h3 {
        color: rgb(var(--foreground) / 0.8);
        font-size: 1rem;
        font-family: var(--monospace);
        font-weight: 400;
    }
</style>