---
import About from "../components/About.astro";
import Contacts from "../components/Contacts.astro";
import Projects from "../components/Projects.astro";
import AnimatedHover from "../components/scripts/AnimatedHover.astro";
import Section from "../components/Section.astro";
import Thoughts from "../components/Thoughts.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <About />
  <Section title="projects" style="--order: 3;">
    <Projects />
  </Section>
  <Section title="contacts">
    <Contacts />
  </Section>
  <Section title="thoughts?">
    <a href="/post-thought">add a thought</a>
    <Thoughts />
  </Section>
</Layout>

<style>
    :global(section[style]),
  :global(hgroup[style]) {
    opacity: 0;
    animation: none;
  }
  @media (prefers-reduced-motion: no-preference) {
    :global(section[style]),
    :global(hgroup[style]) {
      animation: 500ms show forwards;
      animation-delay: calc(var(--order) * 200ms);
    }
  }

  @keyframes show {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>

<AnimatedHover />